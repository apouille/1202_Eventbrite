


<div class="card text-center mt-3">
	<h1 class="card-header"> Profil Utilisateur de <%= @user.first_name %> <%= @user.last_name %></h1>


<div class="card-body"> 
	    <h5 class="card-title">Description : <span class="font-italic"><%= @user.description %></span></h5>
	    <p class="card-text"> Email : <%= @user.email %></p>
	  </div>

<div class="text-center mb-2">
  <%= link_to "Modifier mon profil", edit_user_path(current_user.id), :class => "btn btn-info btn-lg mr-1" %>
  <%= link_to "Changer mon email / mot de passe", edit_user_registration_path(current_user.id), :class => "btn btn-info btn-lg mr-1" %>
</div>
	</div>



	<div class="row mt-3">
	  <% @user.events.each do |party| %>
		<div class="card mx-auto mb-5" style="width: 30rem;">
		  <div class="card-body">
		  <h5 class="card-title"><%= party.title %></h5>
		  <p class="card-text"> Description : <%= party.description %></p>
		 <%= link_to "Pour en savoir plus...", event_path(party.id), class: "btn-light btn p-1" %>
		  </div>
		</div>
	  <% end %>
</div>

