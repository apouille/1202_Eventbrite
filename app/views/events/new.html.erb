    <%= form_tag url_for(action: 'create'), method: "post" do %>
  	<br/>Alors, tu veux un événement pour faire quoi ? <br/>


      <%= label_tag 'Title' %>
      <%= text_field_tag 'title', @event.title, :class => "form-control", placeholder: "Title"%> 

      <%= label_tag 'Description' %>
      <%= text_area_tag 'description', @event.description, :class => "form-control", placeholder: "Description"%>

      <%= label_tag 'Price' %>
      <%= text_field_tag 'price', @event.price, :class => "form-control", placeholder: "Price"%>

      <%= label_tag 'Location' %>
      <%= text_field_tag 'location', @event.location, :class => "form-control", placeholder: "Location"%>

      <%= label_tag 'Duration' %>
      <%= text_field_tag 'duration', @event.duration, :class => "form-control", placeholder: "Duration (un multiple de 5)"%>

      <%= label_tag 'Start_date' %>
      <%= text_field_tag 'start_date', @event.start_date, :class => "form-control", placeholder: "Start_date"%>      

      <br /> <br />

      <%= submit_tag "Create Event" %>

    <% end %>

 <% if @event.errors.any? %>
<div class="alert alert-danger" role="alert">
        <p>Nous n'avons pas réussi à créer l'événement pour la (ou les) raison(s) suivante(s) :</p>
        <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
<% end %>
